<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:gravity="left" >
    <ImageView android:id="@+id/notifplay"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/playbutton"
        android:tint="@color/White"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/notifstop"/>
    <ImageView android:id="@+id/notifstop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/stopbutton"
        android:tint="@color/White"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true" />
    <TextView android:id="@+id/notiftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KUCI Radio Stream"/>
    <TextView android:id="@+id/notifshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In the Madhause Groove"
        android:layout_below="@id/notiftext" />
</RelativeLayout>